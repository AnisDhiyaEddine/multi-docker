{
    "AWSEBDockerrunVersion" : 2,
    "containerDefinitions":[
        {
            "name":"client",
            "image":"anisdhiyaeddine/client",
            "hostname":"client",
            "essential": false
        },{
            "name":"server",
            "image":"anisdhiyaeddine/servre",
